{
  "name": "@adonisjs/ignitor",
  "version": "2.0.6",
  "description": "Fire the adonis-app (in good sense)",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set FORCE_COLOR=true && node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "adonisjs",
    "adonis-bootstrapper",
    "adonis-bootstraper"
  ],
  "author": "adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/ace": "^5.0.1",
    "@adonisjs/fold": "^4.0.7",
    "@adonisjs/sink": "^1.0.16",
    "clear-require": "^2.0.0",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^5.0.0",
    "japa": "^1.0.6",
    "japa-cli": "^1.0.1",
    "nyc": "^11.6.0",
    "semver": "^5.5.0",
    "standard": "^11.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "bin",
      "test"
    ]
  },
  "dependencies": {
    "debug": "^3.1.0",
    "pify": "^3.0.0",
    "youch": "^2.0.7",
    "youch-terminal": "^1.0.0"
  },
  "bin": {
    "ignitor": "index.js"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-ignitor.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-ignitor/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-ignitor#readme"
}
