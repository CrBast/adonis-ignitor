{
  "name": "@adonisjs/ignitor",
  "version": "2.0.6",
  "description": "Fire the adonis-app (in good sense)",
  "main": "index.js",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc japa",
    "test:win": "node ./node_modules/japa-cli/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "commit": "git-cz",
    "lint": "standard"
  },
  "keywords": [
    "adonisjs",
    "adonis-bootstrapper",
    "adonis-bootstraper"
  ],
  "author": "adonisjs",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/ace": "^5.0.3",
    "@adonisjs/fold": "^4.0.9",
    "@adonisjs/mrm-preset": "^1.0.9",
    "@adonisjs/sink": "^1.0.16",
    "clear-require": "^2.0.0",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^7.0.0",
    "japa": "^1.0.6",
    "japa-cli": "^1.0.1",
    "mrm": "^1.2.1",
    "nyc": "^12.0.2",
    "pkg-ok": "^2.2.0",
    "semver": "^5.5.0",
    "standard": "^11.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "test",
      "japaFile.js"
    ]
  },
  "dependencies": {
    "debug": "^3.1.0",
    "pify": "^3.0.0",
    "youch": "^2.0.8",
    "youch-terminal": "^1.0.0"
  },
  "bin": {
    "ignitor": "index.js"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-ignitor.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-ignitor/issues"
  },
  "homepage": "https://github.com/adonisjs/adonis-ignitor#readme"
}
